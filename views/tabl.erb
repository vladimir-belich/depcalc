<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th>#</th>
      <th>Дата</th>
      <th>Днів</th>
      <th>Сума тіла</th>
      <th>%%</th>
    </tr>
  </thead>
  <tbody>
  <% DepCalculator.call(start_date: date, months: months, interest_rate: interest_rate, start_sum: sum, capitalization_method: capitalization_method).each do |row| %>
    <% if row[:date].nil?%>
      <tr>
        <td></td>
        <td style="font-weight:bold;">Усього</td>
        <td style="font-weight:bold;"><%= row[:days] %></td>
        <td style="font-weight:bold;"><%= row[:sum] %></td>
        <td style="font-weight:bold;"><%= row[:interest_amount] %></td>
      </tr>
    <% else %>
      <tr>
        <td><%= row[:count] %></td>
        <td><%= row[:date] %></td>
        <td><%= row[:days] %></td>
        <td><%= row[:sum] %></td>
        <td><%= row[:interest_amount] %></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>
<br>
